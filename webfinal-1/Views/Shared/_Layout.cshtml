<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 收卡大亨</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webfinal_1.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content-wrapper {
            flex: 1;
        }

        footer {
            margin-top: auto;
        }

        .top-nav {
            background-color: #343a40;
            padding: 12px 0;
        }

            .top-nav a {
                color: #ffffff;
                margin: 0 20px;
                font-weight: 500;
                text-decoration: none;
            }

                .top-nav a:hover {
                    text-decoration: underline;
                }

        .footer-bottom {
            background-color: #222;
            color: white;
            text-align: center;
            padding: 8px 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- 🔝 頂部導覽列 -->
    <div class="top-nav text-center">
        <a href="/Home/Index">🏠 首頁</a>
        <a href="/Game/Index">🎮 小遊戲</a>
        <a href="/Pet/Index">🎁 抽卡</a>
        <a href="/Pet/History">📜 抽卡紀錄</a>
        <a href="/Pet/Rank">🏆 排行榜</a>
    </div>

    <div class="container content-wrapper mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-bottom">
            &copy; 2025 收卡大亨 ｜ 抽卡 × 收藏 × 遊戲
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

